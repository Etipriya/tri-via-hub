      <option id="entertainment-musical-theatres" value="13">Entertainment: Musicals & Theatres</option>
      <option id="entertainment-television" value="14">Entertainment: Television</option>
      <option id="entertainment-video-games" value="15">Entertainment: Video Games</option>
      <option id="entertainment-board-games" value="16">Entertainment: Board Games</option>
      <option id="science-nature" value="17">Science & Nature</option>
      <option id="science-computers" value="18">Science: Computers</option>
      <option id="science-mathematics" value="19">Science: Mathematics</option>
      <option id="mythology" value="20">Mythology</option>
      <option id="sports" value="21">Sports</option>
      <option id="geography" value="22">Geography</option>
      <option id="history" value="23">History</option>
      <option id="politics" value="24">Politics</option>
      <option id="art" value="25">Art</option>
      <option id="celebrities" value="26">Celebrities</option>
