    <label for="difficulty-select">Select Difficulty</label>
    <select  class="form-control" id="difficulty-select">
      <option>Easy</option>
      <option>Medium</option>
      <option>Hard</option>
    </select>
  </div>
    <div class="form-group mb-3">
    <label for="type-select">Select Type</label>
    <select class="form-control" id="type-select">
      <option>Multiple</option>
      <option>Boolean</option>

    </select>
  </div>
  <div class="col-auto mt-4">
      <button type="submit" class="btn btn-primary mb-3 w-25">Next</button>
    </div>
</form>
</div>



