      <option id="entertainment-musical-theatres" value="12">Entertainment: Musicals & Theatres</option>
      <option id="entertainment-television" value="13">Entertainment: Television</option>
      <option id="entertainment-video-games" value="14">Entertainment: Video Games</option>
      <option id="entertainment-board-games" value="15">Entertainment: Board Games</option>
      <option id="science-nature" value="16">Science & Nature</option>
      <option id="science-computers" value="17">Science: Computers</option>
      <option id="science-mathematics" value="18">Science: Mathematics</option>
      <option id="mythology" value="19">Mythology</option>
      <option id="sports" value="20">Sports</option>
      <option id="geography" value="21">Geography</option>
      <option id="history" value="22">History</option>
      <option id="politics" value="23">Politics</option>
      <option id="art" value="24">Art</option>
      <option id="celebrities" value="25">Celebrities</option>
