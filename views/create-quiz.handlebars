      <option id="medium" value="medium">Medium</option>
      <option id="hard" value="hard">Hard</option>
    </select>
  </div>
    <div class="form-group mb-3">
    <label for="type-select">Select Type</label>
    <select class="form-control" id="type-select">
      <option id="multiple" value="multiple">Multiple</option>
      <option id="boolean" value="boolean">Boolean</option>

    </select>
  </div>
  <div class="col-auto mt-4">
      <button type="button" class="btn btn-success mb-3 w-25">Generate Questions</button>
      <button type="submit" class="btn btn-primary mb-3 w-25">Create Questions</button>

    </div>
</form>
</div>
