<div class="card m-3 p-3 view-quiz quiz-card">
  <h5 class="card-title my-4 title">{{quiz.title}}</h5>
  <div>
    <div class="d-flex flex-wrap my-2">
      <div class="fw-bold p-1 text-end">Category</div>
      <div class="p-1">{{quiz.category.category_name}}</div>
    </div>
    <div class="d-flex flex-wrap my-2">
      <div class="fw-bold p-1 text-end">Difficulty</div>
      <div class="p-1">{{quiz.difficulty}}</div>
    </div>
  </div>
  <div class="d-grid gap-2 mt-4">
    <a class="btn btn-outline-success" href="/quiz/{{quiz.id}}">Play</a>
  </div>
</div>