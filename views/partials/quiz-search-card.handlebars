<div class="card m-3 p-3 view-quiz quiz-card">
  <h5 class="card-title my-4 title" id="{{id}}">{{title}}</h5>
  <div class="quiz-card-body">
    <div class="d-flex flex-wrap my-2">
      <div class="fw-bold p-1 text-end">Category</div>
      <div class="p-1">{{category.category_name}}</div>
    </div>
    <div class="d-flex flex-wrap my-2">
      <div class="fw-bold p-1 text-end">Difficulty</div>
      <div class="p-1">{{difficulty}}</div>
    </div>
    <div class="d-flex flex-wrap my-2">
      <div class="fw-bold p-1 text-end">Created By</div>
      <div class="p-1">{{user.username}}</div>
    </div>
  </div>
  <div class="d-grid gap-2 mt-4">
    <a class="btn btn-outline-success" href="/quiz/{{id}}">Play</a>
  </div>
</div>